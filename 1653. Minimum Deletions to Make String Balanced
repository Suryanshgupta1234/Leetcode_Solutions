class Solution {
    public int minimumDeletions(String s) {
        Stack<Character> st = new Stack<>();
        int delete = 0;
        for(int i=0; i<s.length(); i++){
            char ch = s.charAt(i);
            if(!st.isEmpty() && st.peek() == 'b' && ch == 'a'){
                st.pop();
                delete++;
            }else{
                st.push(ch);
            }
        }
        return delete;
    }
}
